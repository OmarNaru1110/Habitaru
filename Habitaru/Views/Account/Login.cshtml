@model UserLoginVM

@{
    ViewData["Title"] = "Sign in";
}

<h1>Sign in</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" value="@Model?.Username" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input id="rememberMe" class="form-check-input" type="checkbox" asp-for="RememberMe">
                <label for="rememberMe" class="form-check-label">Remember me</label>
            </div>
            <br />
            <div>
                <input type="submit" class="btn btn-primary btn-md" style="font-weight:500" />
                <p><a asp-action="Register"> register </a></p>

            </div>
            <br />

        </form>

    </div>
</div>
<br />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


