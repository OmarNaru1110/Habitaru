@model EditPasswordVM

@{
    ViewData["Title"] = "Edit Password";
}

<h1>@User.Identity.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">old password</label>
                <input asp-for="OldPassword" value="@Model?.OldPassword" class="form-control" />
                <span style="color:red" asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">new password</label>
                <input asp-for="NewPassword" value="@Model?.NewPassword" class="form-control" />
                <span style="color:red" asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label">confirm new password</label>
                <input asp-for="ConfirmNewPassword" value="@Model?.ConfirmNewPassword" class="form-control" />
                <span style="color:red" asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <br />
            <div>
                <input value="Save" type="submit" class="btn btn-primary btn-md" style="font-weight:500" />
            </div>
        </form>
    </div>
</div>
<br />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
